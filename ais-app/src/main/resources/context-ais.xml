<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="configFactory" class="eu.cise.adaptor.AISConfigFactory"/>

  <bean id="config" factory-bean="configFactory" factory-method="create"/>

  <bean id="translator" class="eu.cise.adaptor.DefaultTranslator">
    <constructor-arg ref="config"/>
  </bean>

  <bean id="normalizer" class="eu.cise.adaptor.tbsalling.DefaultAISNormalizer"/>

  <bean id="dispatcher" class="jrc.cise.transport.RestDispatcher"/>

  <bean id="certificateRegistry" class="jrc.cise.gw.signature.DefaultCertificateRegistry">
    <constructor-arg value="eu.cise.es.gc-ls01"/>
    <constructor-arg value="cisePrivate.jks"/>
    <constructor-arg value="cisecise"/>
    <constructor-arg value="cisecise"/>
    <constructor-arg value="cisePublic.jks"/>
    <constructor-arg value="cisecise"/>
  </bean>

  <bean id="signatureService" class="jrc.cise.gw.signature.DefaultSignatureService">
    <constructor-arg ref="certificateRegistry"/>
  </bean>

  <bean id="signingDispatcher" class="jrc.cise.gw.signature.SignatureDispatcherDecorator">
    <constructor-arg ref="dispatcher"/>
    <constructor-arg ref="signatureService"/>
  </bean>

  <bean id="processor" class="eu.cise.adaptor.DefaultAISProcessor">
    <constructor-arg ref="translator"/>
    <constructor-arg ref="signingDispatcher"/>
    <constructor-arg ref="config"/>
  </bean>

  <bean id="aisConsumer" class="eu.cise.adaptor.tbsalling.AISMessageConsumer">
    <constructor-arg index="0" ref="normalizer"/>
    <constructor-arg index="1" ref="processor"/>
  </bean>

  <bean id="fileAISSource" class="eu.cise.adaptor.tbsalling.FileAISSource">
    <constructor-arg value="/raw-ais/nmea-sample"/>
    <constructor-arg ref="aisConsumer"/>
  </bean>

  <bean id="socketAISSource"
        class="eu.cise.adaptor.tbsalling.SocketAISSource">
    <constructor-arg value="localhost"/>
    <constructor-arg value="60000"/>
    <constructor-arg ref="aisConsumer"/>
  </bean>

</beans>