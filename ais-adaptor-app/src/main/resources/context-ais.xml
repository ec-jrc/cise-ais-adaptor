<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean id="aisConsumer" class="eu.cise.adaptor.tbsalling.AISMessageHandler"/>

  <bean id="fileAISSource" class="eu.cise.adaptor.tbsalling.FileAISSource">
    <constructor-arg value="/raw-ais/nmea-sample"/>
    <constructor-arg ref="aisConsumer"/>
  </bean>

  <bean id="socketAISSource"
        class="eu.cise.adaptor.tbsalling.SocketAISSource">
    <constructor-arg value="localhost"/>
    <constructor-arg value="60000"/>
  </bean>

</beans>